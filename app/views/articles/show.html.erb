<h1><%= @article.title %></h1>
<div>
    <%= @article.text %>
</div>
<h2>Comments</h2>
<% @article.comments.each do |comment| %>
    <p>Commenter: <%= comment.commenter %></p>
    <p>Body: <%= comment.body %></p>
    <%= link_to 'delete this comment', [comment.article, comment], method: :delete, data: { confirm: 'Are your sure to delete this' } %>
<% end %>
<h2>Add a Comment</h2>
<%= form_for([@article, @article.comments.build]) do |f| %>
<p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
    
</p>
<p>
    <%= f.label :body %>
    <%= f.text_area :body %>
</p>
<p>
    <%= f.submit %>
</p>
<% end %>
<%= link_to 'My Blog', controller: 'articles' %>